{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Cookie file content !{% endblock %}

{% block body %}
    <div class="row py-4">
        <div class="col">
            <div class="alert alert-info" role="alert">
                <h4 class="alert-heading"> Cookie recorded at {{ record.createdAt ? record.createdAt|date('Y-m-d H:i:s') : '' }}</h4>
                <hr/>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead>
                        <tr>
                            <th>Key</th>
                            <th>Value</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for key,value in record.data %}
                            <tr>
                                <td>{{ key }}</td>
                                <td>{{ value }}</td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="2">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <hr/>
                <a class="btn btn-danger" href="{{ path('app_hack') }}"> Back </a>
            </div>
        </div>
    </div>
{% endblock %}
