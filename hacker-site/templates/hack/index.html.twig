{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Data list{% endblock %}

{% block body %}
<div class="row py-2">
    <div class="col-12 py-2">
        <a class="btn btn-danger" href="#"> Clean Db </a>
    </div>
    <hr/>
    <div class="col-6">
        <div class="card">
            <div class="card-header"><b>Cookies Stored in Db</b></div>
            <div class="card-body">
                <table class="table table-striped table-responsive table-bordered">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Date</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for c in storedCookies %}
                        <tr>
                            <td>{{ c.id }}</td>
                            <td>{{ c.createdAt ? c.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                            <td>
                                <a class="btn btn-primary" href="#">show</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <hr/>
        <div class="card">
            <div class="card-header"><b>Cookies Json Files</b></div>
            <div class="card-body">
                <table class="table table-striped table-responsive table-bordered">
                    <thead>
                    <tr>
                        <th>Date</th>
                        <th>Filename</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for cf in cookieFiles %}
                        <tr>
                            <td>{{ cf.createdAt | date('Y-m-d H:i:s') }}</td>
                            <td>{{ cf.name }}</td>
                            <td>
                                <a class="btn btn-primary" href="#">show</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-6">
        <div class="card">
            <div class="card-header"><b>Sessions</b></div>
            <div class="card-body">
                <table class="table table-striped table-responsive table-bordered">
                    <thead>
                    <tr>
                        <th>Date</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
